[init]
	defaultBranch = main
[user]
	email = vinay.dg@travancoreanalytics.com
	name = Vinay DG
[color]
	ui = auto
[pull]
	rebase = false
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
